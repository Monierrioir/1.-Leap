#include <stdio.h>
#include <stdlib.h>


int main(){
    int arr[]={3,8,7,4,6,1,9};
    int max=arr[0];
    int l=0;

    int size= sizeof(arr)/ sizeof(arr[0]);

    for(int i=0;i<size;i++){
        if(arr[i]>max){
            max=arr[i];
            l=i;

        }
    }
    printf("The biggest element is: %d . location and %d",l,arr[l]);

    return 0;
}
