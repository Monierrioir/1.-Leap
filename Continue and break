// İki sayı arasındaki çift sayıların toplamını bulma
#include<stdio.h>
int main(void){
	int a,b,i,sum=0;
	printf("PLease enter two number: ");
	scanf("%d %d",&a,&b);
	
	for (i=a+1;i<b;i++){
		
		if (i%2==1)
		continue;
		sum+=i;
		
	}
	
	
	printf("%d is value of sum.",sum);
	
	
	
	return 0;
}


// İki sayı arasındaki çift sayıların toplamını bulma(Fonksiyon kullanarak)
#include<stdio.h>

int sumofvalue(int n1,int n2){
	
	int i,sum=0;
	for (i=n1;i<n2;i++){
		if (i%2==1)
		continue;
		sum+=i;
	
	}
		return sum;
}
int main(){
	
	int a,b;
	printf("Please enter two number: ");
	scanf("%d %d",&a,&b);
	
	printf("%d is value of sum.",sumofvalue(a,b));
	
	
	
	return 0;
}


// Break döngüsü anlamak için örnek
#include<stdio.h>


int main(){
	
	int i,sum;
	sum=0;
 for (i=0;i<=10;i++){

 	
 	if (i==8)
 	break;
 	 	sum+=i;
 }
	
	printf("%d is value of sum.",sum);
	return 0;
}

	
